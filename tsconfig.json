{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "noImplicitAny": false,
        "outDir": "app",
        "lib": [
            "es6",
            "dom"
        ],
        /*"noUnusedLocals": true,
        "noUnusedParameters": true,*/
        "typeRoots": [
            "node_modules/@types/"
        ]
    },
    "exclude": [
        "node_modules/*",
        "**/*-aot.ts"
    ]
}