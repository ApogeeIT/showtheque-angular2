{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": false,
    "outDir": "app"
  },

  "files": [
    "src/app.module.ts",
    //"src/main.ts"
    "src/main-aot.ts"
  ],

  "angularCompilerOptions": {
   "genDir": "app/aot",
   "skipMetadataEmit" : true
 }
}