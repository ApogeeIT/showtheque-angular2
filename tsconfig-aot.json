{
    "compilerOptions": {
        "target": "es5",
        "module": "es2015",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noImplicitAny": true,
        "allowJs" : true,
        "suppressImplicitAnyIndexErrors": true,
        "outDir": "app/aot",
        "lib": [
            "es2015",
            "dom"
        ]
    },
    "files": [
        "src/main.ts"
    ],
    "angularCompilerOptions": {
        "genDir": "app/aot",
        "skipMetadataEmit": true
    }
}